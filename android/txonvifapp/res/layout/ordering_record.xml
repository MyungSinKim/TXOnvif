<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="850px"
    android:layout_height="550px"
    android:layout_gravity="center"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/top_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/order_record_pop_textview"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/record_mode"
            android:textColor="#fff"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_linear"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="20dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_linear"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="80dp" >

            <!-- 上部文字 -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="开始时间"
                android:textSize="22sp" />

            <TimePicker
                android:id="@+id/startTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_linear"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="300dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="结束时间"
                android:textSize="22sp" />
            <!-- 添加时间控件 -->

            <TimePicker
                android:id="@+id/endTimePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="50dp" >

        <!-- 添加周期checkbox -->

        <CheckBox
            android:id="@+id/zhouyicb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:paddingLeft="15dp"
            android:text="周一"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" >
        </CheckBox>

        <CheckBox
            android:id="@+id/zhouercb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:paddingLeft="15dp"
            android:text="周二"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" >
        </CheckBox>

        <CheckBox
            android:id="@+id/zhousancb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:paddingLeft="15dp"
            android:text="周三"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" >
        </CheckBox>

        <CheckBox
            android:id="@+id/zhousicb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:paddingLeft="15dp"
            android:text="周四"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" >
        </CheckBox>

        <CheckBox
            android:id="@+id/zhouwucb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:paddingLeft="15dp"
            android:text="周五"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" >
        </CheckBox>

        <CheckBox
            android:id="@+id/zhouliucb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:paddingLeft="15dp"
            android:text="周六"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" >
        </CheckBox>

        <CheckBox
            android:id="@+id/zhouricb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:checked="false"
            android:paddingLeft="15dp"
            android:text="周日"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" >
        </CheckBox>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pop_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingTop="50dp" >

        <Button
            android:id="@+id/order_record_mode_save_button"
            android:layout_width="176dp"
            android:layout_height="40dp"
            android:background="@drawable/edit_btn_selector"
            android:gravity="center"
            android:text="确定"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>